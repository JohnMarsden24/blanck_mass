<div class="page-container">
  <div class="grid-container-admin w">
    <div class="form new-post">
      <h2>New post</h2>
      <%= simple_form_for @post, class: "hello" do |f| %>
        <%= f.input :title %>
        <%= f.input :content, input_html: { class: "post-form", rows:"15"} %>
        <%= f.button :submit, class: "bm-btn"%>
      <% end %>
    </div>
    <div class="form new-show">
      <h2>New show</h2>
      <%= simple_form_for (@show) do |f| %>
        <%= f.input :date %>
        <%= f.input :location %>
        <%= f.input :link %>
        <%= f.button :submit, class: "bm-btn"%>
      <% end %>
    </div>
    <div class="form new-video">
      <h2>New video</h2>
      <%= simple_form_for (@video) do |f| %>
        <%= f.input :link %>
        <%= f.input :caption %>
        <%= f.button :submit, class: "bm-btn"%>
      <% end %>
    </div>
    <div class="form new-audio">
      <h2>New audio</h2>
      <%= simple_form_for (@audio) do |f| %>
        <%= f.input :link %>
        <%= f.button :submit, class: "bm-btn"%>
      <% end %>
    </div>
  </div>
</div>




