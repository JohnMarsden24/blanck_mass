<% api_key = ENV['tiny_api_key'] %>

<script src="https://cdn.tiny.cloud/1/<%= api_key %>/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
  tinymce.init({
    selector: '#my-form',
    plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen',
    toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen',
    toolbar_mode: 'floating',
    tinycomments_mode: 'embedded',
    tinycomments_author: 'Author name',
  });
</script>

<%= render "shared/navbar" %>

<div class="back-image">
</div>

<div class="page-container">
  <div class="grid-container-admin w">
    <div class="form new-post">
      <h2>New post</h2>
      <%= simple_form_for @post, class: "hello" do |f| %>
        <%= f.input :title %>
        <%= f.input :content, input_html: { id: "my-form", rows:"15"} %>
        <%= f.button :submit, class: "bm-btn"%>
      <% end %>
    </div>
    <div class="form new-show">
      <h2>New show</h2>
      <%= simple_form_for (@show) do |f| %>
        <%= f.input :date %>
        <%= f.input :location %>
        <%= f.input :link %>
        <%= f.button :submit, class: "bm-btn"%>
      <% end %>
    </div>
    <div class="form new-video">
      <h2>New video</h2>
      <%= simple_form_for (@video) do |f| %>
        <%= f.input :link %>
        <%= f.input :caption %>
        <%= f.button :submit, class: "bm-btn"%>
      <% end %>
    </div>
    <div class="form new-audio">
      <h2>New audio</h2>
      <%= simple_form_for (@audio) do |f| %>
        <%= f.input :link %>
        <%= f.button :submit, class: "bm-btn"%>
      <% end %>
    </div>
  </div>
</div>




