<div class="page-container">
  <div class="d-flex <%= @layout %>">
    <div class="half-width-container">
      <% if @shows.empty? %>
       <div class="socials-posts-empty-shows">
        <%= render "shared/socials" %>
      </div>
      <% end %>
      <div class="socials-posts">
        <%= render "shared/socials" %>
      </div>
        <%= render @posts %>
      <div class="pagy-navbar">
        <%= pagy_bootstrap_nav(@pagy).html_safe %>
      </div>
    </div>
    <% unless @shows.empty? %>
    <div class="shows-widget mr4 overflow w">
      <div class="socials-shows">
        <%= render "shared/socials" %>
      </div>
      <div class="grey-bg ps2">
        <h4 class="caslon tac no-m pb2 letter-spacing-double">UPCOMING SHOWS</h4>
        <% @shows.each_with_index do |show, index| %>
          <div class="min-height8 d-flex justify-content-between align-items-center <%= show.border?(index, @shows.length) %>">
            <p class="mtb1 mr2 break-word max-width-75"><%= show.display_date.upcase %> / <%= show.location %></p>
            <% unless show.link.empty? %>
              <%= link_to 'TICKETS', show.link, target: :_blank, class: "bm-btn no-d"%>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
