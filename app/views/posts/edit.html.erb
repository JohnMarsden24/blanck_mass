<% api_key = ENV['tiny_api_key'] %>

<script src="https://cdn.tiny.cloud/1/<%= api_key %>/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
  tinymce.init({
    selector: '#my-form',
    plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen',
    toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen',
    toolbar_mode: 'floating',
    tinycomments_mode: 'embedded',
    tinycomments_author: 'Author name',
  });
</script>

<%= render "shared/navbar" %>

<div class="back-image">
</div>

<div class="past-nav">
  <div class="ps4 w">
    <h1>Edit post</h1>

    <%= simple_form_for(@post) do |f| %>
      <%= f.input :title %>
      <%= f.input :content, input_html: { id: "my-form", rows:"15"} %>
      <%= f.button :submit, class: "btn-full-width"%>
    <% end %>
  </div>
</div>

