<%= render "shared/navbar" %>
<div class="black-con-full-height">

<% @posts.each do |post| %>
<%= post.title.html_safe %>
<%= post.content.html_safe %>
<% end %>


<%= simple_form_for(@post) do |f| %>
  <%= f.input :title %>
  <%= f.input :content, input_html: { id: "my-form"} %>
  <%= f.button :submit, class: "btn-full-width"%>
<% end %>

</div>


