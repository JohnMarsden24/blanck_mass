<%= render "shared/navbar" %>

<div class="back-image">
</div>

  <% if @shows.empty? %>
    <div class="past-nav d-flex justify-content-center mt4">
    <div class="posts">
  <% else %>
    <div class="past-nav d-flex justify-content-start mt4">
      <div class="posts ml4">
  <% end %>

      <% @posts.each do |post| %>
        <div class="post mb4 pb2">
          <h4 class="caslon tac ps2"><%= post.title %></h4>
          <%= post.content.html_safe %>
          <p class="no-pm"><%= post.time %></p>
          <% if user_signed_in? && current_user.admin %>
          <div class="admin-links">
            <p>
              <%= link_to "✎", edit_post_path(post), class: "no-d w" %>
              <%= link_to "✖", post_path(post), method: :delete, class: "no-d w" %>
            </p>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <% unless @shows.empty? %>
      <div class="shows-homepage w overflow mr4">
        <h4 class="caslon tac ptb2 no-m">UPCOMING SHOWS</h4>
        <% @shows.each_with_index do |show, index| %>
          <% if index == (@shows.length - 1) %>
          <div class="d-flex justify-content-between align-items-center ptb1 mlr2">
            <% else %>
          <div class="d-flex justify-content-between align-items-center ptb1 mlr2 bottom-bord-1">
            <% end %>
            <p class="no-pm"><%= show.display_date.upcase %> / <%= show.location %>
              <% if user_signed_in? && current_user.admin %>
                <%= link_to "✎", edit_show_path(show), class: "no-d w no-pm" %>
                <%= link_to "✖", show_path(show), method: :delete, class: "no-d w no-pm" %>
              <% end %>
            </p>
             <%= link_to 'TICKETS', show.link, target: :_blank, class: "bm-btn no-d"%>
          </div>
        <% end %>
      </div>
      <% end %>
  </div>


